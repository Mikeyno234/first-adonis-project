<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Kelas - CRUD</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      th {
        background-color: #f2f2f2;
      }

      form {
        margin-top: 20px;
      }
      body {
        font-family: Arial, sans-serif;
      }

      .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ccc;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1000;
      }

      .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      }

      form {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <h2>Data {{ nama_Mahasiswa }}</h2>

    <button onclick="openModal()">Tambah Data</button>

    <div class="overlay" id="overlay"></div>

    <div class="modal" id="kelasModal">
      <h3>Tambah</h3>
      <form id="kelas-form" action="{{ route('user.store') }}" method="POST">
        <div style="margin-bottom: 10px">
          <label for="Admin">nama:</label>
          <input type="text" id="nama" name="nama" required />
        </div>
        <div style="margin-bottom: 10px">
          <label for="Admin">umur:</label>
          <input type="text" id="umur" name="umur" required />
        </div>
        <div style="margin-bottom: 10px">
          <label for="Admin">email:</label>
          <input type="text" id="email" name="email" required />
        </div>
        <div style="margin-bottom: 10px">
          <label for="Admin">password:</label>
          <input type="text" id="password" name="password" required />
        </div>
        <div style="margin-bottom: 10px">
          <label for="Admin">nim:</label>
          <input type="text" id="nim" name="nim" required />
        </div>
        <button type="submit" style="margin-bottom: 10px">Tambah Data</button>
      </form>
      <button onclick="closeModal()">Tutup</button>
    </div>

    <table id="kelas-table">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama</th>
          <th>Umur</th>
          <th>Mmail</th>
          <th>NIM</th>
          <th>Daftar Ulang</th>
          <th>Data</th>
        </tr>
      </thead>
      <tbody>
        @if(Admin[0]?.id) 
        @each(data in Admin)
        <tr>
          <td>{{ data?.idx }}</td>
          <td>{{ data?.nama }}</td>
          <td>{{ data?.umur }}</td>
          <td>{{ data?.email }}</td>
          <td>{{ data?.nim }}</td>
          <td>{{ data?.daftar_ulang }}</td>

          <td>
            <a href="{{ route('user.detail', { id: data.id }) }}">Detail </a>
            <a href="{{ route('user.updateview', { id: data.id }) }}">Edit</a>
            <a href="{{ route('user.delete', { id: data.id }) }}">Delete</a>
          </td>
        </tr>
        @endeach
         @endif
        <!-- Data kelas akan ditampilkan di sini -->
      </tbody>
    </table>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const kelasForm = document.getElementById("kelas-form");
        const kelasModal = document.getElementById("kelasModal");
        const overlay = document.getElementById("overlay");

        // kelasForm.addEventListener("submit", function (event) {
        //   event.preventDefault();

        //   closeModal();
        // });

        window.openModal = function () {
          kelasModal.style.display = "block";
          overlay.style.display = "block";
        };

        window.closeModal = function () {
          kelasModal.style.display = "none";
          overlay.style.display = "none";
          kelasForm.reset();
        };
      });
    </script>
  </body>
</html>
