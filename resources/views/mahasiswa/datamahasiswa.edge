<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Kelas - CRUD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      th {
        background-color: #f2f2f2;
      }

      form {
        margin-top: 20px;
      }
      body {
        font-family: Arial, sans-serif;
      }

      .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ccc;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1000;
      }

      .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      }

      form {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <h2>Data {{ nama_Mahasiswa }}</h2>

    <table id="kelas-table">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama</th>
          <th>Umur</th>
          <th>Mmail</th>
          <th>NIM</th>
          <th>Status</th>
          <th>Daftar Ulang</th>
        </tr>
      </thead>
      <tbody>
        @if(Admin[0]?.id) 
        @each(data in Admin)
        <tr>
          <td>{{ data?.idx }}</td>
          <td>{{ data?.nama }}</td>
          <td>{{ data?.umur }}</td>
          <td>{{ data?.email }}</td>
          <td>{{ data?.nim }}</td>
          <td>{{ data?.status }}</td>
          <td>{{ data?.daftar_ulang }}</td>
        </tr>
        @endeach 
        @endif
        <!-- Data kelas akan ditampilkan di sini -->
      </tbody>
    </table>
    <br />
    <br />

    <a type="button" class="btn btn-dark" href="/mahasiswa/dashboard"
      >Kembali</a
    >

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const kelasForm = document.getElementById("kelas-form");
        const kelasModal = document.getElementById("kelasModal");
        const overlay = document.getElementById("overlay");

        // kelasForm.addEventListener("submit", function (event) {
        //   event.preventDefault();

        //   closeModal();
        // });

        window.openModal = function () {
          kelasModal.style.display = "block";
          overlay.style.display = "block";
        };

        window.closeModal = function () {
          kelasModal.style.display = "none";
          overlay.style.display = "none";
          kelasForm.reset();
        };
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
